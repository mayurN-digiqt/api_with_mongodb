<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/header.ejs') %>
<body>
    <%- include('./partials/nav.ejs') %>
    <div class="blog content">
        <h2>All Blogs</h2>
        <% if(blogs.length > 0) { %>
            <% blogs.forEach((blog)=> { %>
                
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
                <a class="btn btn-primary single" style="text-decoration: none; color: #000;" href="/blogs/<%= blog._id %>" >See Blog</a>
                           
            <% }) %>
        <% } else { %>
            <h2>No One Blog Right Now...</h2>
        <% } %>
    </div>
        <%- include('./partials/footer.ejs') %>
</body>
</html>